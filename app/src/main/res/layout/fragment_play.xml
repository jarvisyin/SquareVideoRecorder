<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Play.PlayFragment">

    <com.jarvisyin.squarevideorecorder.Common.Widget.ActionBar.ActionBar
        xmlns:vshopbuyer="http://schemas.android.com/apk/res-auto"
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        vshopbuyer:title="视频编辑" />

    <com.jarvisyin.squarevideorecorder.Common.Widget.SquareFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <SurfaceView
            android:id="@+id/surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.jarvisyin.squarevideorecorder.Common.Widget.SquareFrameLayout>


</FrameLayout>
